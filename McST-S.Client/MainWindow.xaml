<Window x:Class="McST_S.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McST_S.Client"
        mc:Ignorable="d"
        Title="McST-S 启动器" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        MinHeight="500" 
        MinWidth="700">

    <Grid>
        <!-- 背景图 -->
        <Image x:Name="BackgroundImage" 
               Stretch="UniformToFill" 
               Opacity="0.7"/>

        <!-- 主内容区域 -->
        <Border Background="#CCFFFFFF" 
                Margin="20" 
                CornerRadius="10">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,0,0,20">
                    <Button Content="设置" 
                            Width="60" 
                            Click="SettingsButton_Click"/>
                </StackPanel>

                <!-- 主要内容 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧：游戏设置 -->
                    <StackPanel Grid.Column="0" 
                                Margin="0,0,20,0">
                        <TextBlock Text="游戏设置" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <ComboBox x:Name="VersionComboBox" 
                                  Margin="0,0,0,10"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"/>

                        <Button x:Name="CheckUpdateButton" 
                                Content="检查更新" 
                                Click="CheckUpdateButton_Click"
                                Margin="0,0,0,20"/>

                        <TextBlock Text="账号设置" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <ComboBox x:Name="AccountComboBox" 
                                  Margin="0,0,0,10"
                                  DisplayMemberPath="Username"
                                  SelectedValuePath="Id"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="添加账号" 
                                    Click="AddAccountButton_Click"
                                    Margin="0,0,10,0"/>
                            <Button Content="管理账号" 
                                    Click="ManageAccountsButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 右侧：新闻/游戏信息 -->
                    <Border Grid.Column="1" 
                            Background="#10FFFFFF" 
                            CornerRadius="5" 
                            Padding="15">
                        <ScrollViewer>
                            <TextBlock x:Name="NewsTextBlock" 
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <!-- 底部：启动按钮 -->
                <Button Grid.Row="2" 
                        x:Name="LaunchButton" 
                        Content="启动游戏" 
                        Height="40" 
                        FontSize="16" 
                        FontWeight="Bold"
                        Click="LaunchButton_Click"
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>